@{
	Layout = "_Layout"; @*shared index*@
} 

@model SmartBox

<div class="container">
	<div class="row py-5 m-auto">
		<div class="col-6">
			<h3>@Model.Name :</h3>
			<h6>@Model.Description</h6>
			<h4>@Model.Price €</h4>
		</div>
		<div class="col-6">
			<img width=70% src="@Model.Image">
		</div>
	</div>
	<div class="text-center">
		<a href="@Url.Action("Index", "smartbox")">Torna alla pagina iniziale</a>
	</div>
</div>